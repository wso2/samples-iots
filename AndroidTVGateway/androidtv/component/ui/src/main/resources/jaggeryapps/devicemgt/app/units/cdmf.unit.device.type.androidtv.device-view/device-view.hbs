{{#zone "topCss"}}
    <style>
        .thumbnail.icon:before {
            padding-top: 0;
        }
        .tab-responsive .arrow-left{
            display: none;
        }
        #edge-device-data td{
            vertical-align: middle;
        }
        #edge-device-data .form-group{
            margin-right: 10px;
        }
        #edge-device-data .btn-small{
            padding: 5px 20px;
        }
        #edge-device-data p{
            margin: 0px;
        }
        #edge-device-data .btn-remove-device{
            margin: 0px;
            padding: 5px 20px;
        }
        #edge-device-data .btn-remove-device i{
            font-size: 0.7em;
        }
    </style>
{{/zone}}

{{#zone "device-thumbnail"}}
    <img src="{{@unit.publicUri}}/images/deviceType.png"/>
{{/zone}}

{{#zone "device-opetations"}}
    <div style="background: #11375B; color: #fff; padding: 10px; margin-bottom: 5px">
        Operations
    </div>
    <div class="add-margin-top-4x">
        {{unit "cdmf.unit.device.operation-bar" device=device autoCompleteParams=autoCompleteParams
        encodedFeaturePayloads=encodedFeaturePayloads}}
    </div>
{{/zone}}

{{#zone "device-view-tabs"}}

{{/zone}}

{{#zone "device-view-tab-contents"}}
    <div id="edge-device-details" data-deviceid="{{device.deviceIdentifier}}"
         data-websocketurlStream="{{websocketendpoint}}">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Device Name</th>
                <th>Serial Number</th>
                <th class="text-center">Command</th>
                <th>Incoming Message</th>
                <th class="text-center">Utilities</th>
            </tr>
            </thead>
            <tbody id="edge-device-data">

            </tbody>
        </table>
    </div>

    {{unit "cdmf.unit.device.type.androidtv.realtime.analytics-view" device=device}}

{{/zone}}

{{#zone "bottomJs"}}
    {{js "js/device-view.js"}}
{{/zone}}